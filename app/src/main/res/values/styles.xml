<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="TextAppearance.Montserrat" parent="android:TextAppearance">
		<item name="fontPath">@string/montserrat_regular</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="TextAppearance.Montserrat.Bold" parent="android:TextAppearance">
		<item name="fontPath">@string/montserrat_bold</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="WeatherDetailIconName">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">10sp</item>
		<item name="android:textColor">#aaffffff</item>
	</style>

	<style name="WeatherDetailItems">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:layout_marginTop">5dp</item>
	</style>

</resources>
